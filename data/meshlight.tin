# .tin file format

options
{
	width 256
	height 256
	
}

camera
{
	position 0.2 2.0 10.0
	target 0.0 0.0 0.0
}

material gold
{
	color 1.0 0.71 0.29
	roughness 0.2
	metallic 1.0	
}

material ground
{
	color 0.85 0.85 0.85
	roughness 0.2
}

material green
{
	color 0.25 0.85 0.25
	roughness 0.2
	specular 0.1
	emission 1.0 5.0 1.0
}



material light
{
	emission 10.0 10.0 10.0
}

material lightred
{
	emission 10.0 3.0 3.0
}

