primitive
{
	type plane
	plane 0 1 0 0
	material ground
}

primitive
{
	type sphere
	radius 2.0
	material light
	
	lightSamples 10

	position 5 10 5
	rotation 0 0 0 1
	scale 1
}

primitive
{
	type sphere
	radius 0.5
	material gold
	
	position -2 0.5 0
	rotation 0 0 0 1
	scale 1.0
}

primitive
{
	type mesh
	mesh meshes/sphere.obj
	material lightred

	lightSamples 1

	position 1 0.0 0
	rotation 0 0 0 1
	scale 2.0
}


primitive
{
	type sphere
	radius 1
	material light

	lightSamples 1

	position 0 1.0 0
