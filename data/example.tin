# .tin file format

options
{
	width 500
	height 200
	
}

camera
{
	position 0.2 2.0 10.0
	target 0.0 0.0 0.0
}

sky
{
	probe probes/vankleef.hdr
}

material gold
{
	color 1.0 0.71 0.29
	roughness 0.2
	metallic 1.0	
}

material ground
{
	color 0.85 0.85 0.85
	roughness 0.2
}

material green
{
	color 0.25 0.85 0.25
	roughness 0.2
	specular 0.1
}



material light
{
	emission 10.0 10.0 10.0
}


mesh cube
{
	verts 24
	0.5 0.5 0.5
	-0.5 0.5 0.5
	0.5 -0.5 0.5
	-0.5 -0.5 0.5
	0.5 0.5 -0.5
