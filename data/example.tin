	0.5 -0.5 -0.5
	-0.5 -0.5 -0.5
	0.5 0.5 0.5
	0.5 -0.5 0.5
	0.5 0.5 0.5
	0.5 0.5 -0.5
	-0.5 0.5 0.5
	-0.5 0.5 -0.5
	0.5 -0.5 -0.5
	0.5 0.5 -0.5
	-0.5 -0.5 -0.5
	0.5 -0.5 -0.5
	-0.5 -0.5 0.5
	0.5 -0.5 0.5
	-0.5 -0.5 -0.5
	-0.5 -0.5 0.5
	-0.5 0.5 -0.5
	-0.5 0.5 0.5

	tris 12
	0 1 2 
	3 2 1 
	8 9 4 
	6 4 9 
	10 11 12 
	5 12 11 
	7 13 14 
	15 14 13 
	16 17 18 
	19 18 17 
	20 21 22 
	23 22 21 
}


primitive
{
	type plane
	plane 0 1 0 0
	material ground
}

primitive
{
	type sphere
	radius 2.0
	material light
	
	lightSamples 1

	position 5 10 5
	rotation 0 0 0 1
	scale 1
}

primitive
{
	type sphere
	radius 0.5
	material gold
	
	position -2 0.5 0
	rotation 0 0 0 1
	scale 1.0
}

primitive
{
	type mesh
	mesh meshes/brain.obj
	material gold

	position 1 0.0 0
	rotation 0 0 0 1
	scale 2.0
}


primitive
{
	type mesh
	mesh cube
	material green

	position 0 0.5 0
	rotation 0 0 0 1
	scale 1.0
}
